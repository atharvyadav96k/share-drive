<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Car Schema Form</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #f8f9fa;
    }

    .form-container {
      max-width: 800px;
      margin: 30px auto;
      background-color: #fff;
      padding: 20px;
      border-radius: 5px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .form-title {
      text-align: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/admin">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/admin">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/requests">Requests</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/uploadCar">New Car</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/cars">Cars</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  
  <div class="container">
    <div class="form-container">
      <h2 class="form-title">Car Information Form</h2>
      <form id="carForm" action="/admin/editCar/<%= id %>" method="POST" enctype="multipart/form-data">
        <!-- name -->
        <div class="mb-3">
          <label for="name" class="form-label">Car Name</label>
          <input type="text" value="<%= car.name %>" class="form-control" id="name" name="name" >
        </div>

        <!-- price -->
        <div class="mb-3">
          <label for="name" class="form-label">Car Price</label>
          <input type="number" value="<%= car.pricePerDay %>" class="form-control" id="pricePerDay" name="pricePerDay" >
        </div>

        <!-- photo -->
        <div class="mb-3">
          <label for="image" class="form-label">Car Image</label>
          <input 
            type="file" 
            class="form-control" 
            name="image" 
            id="image" 
            accept=".jpeg,.jpg,.png" 
             />
        </div>

        <!-- Mileage -->
        <div class="mb-3">
          <label for="mileage" class="form-label">Mileage (in km/l)</label>
          <input type="number" value="<%= car.mileage %>" class="form-control" id="mileage" name="mileage" >
        </div>

        <!-- Transmission -->
        <div class="mb-3">
            <label for="transmission" class="form-label">Transmission</label>
            <select class="form-select" id="transmission" name="transmission">
              <option value="Manual" <%= car.transmission === "Manual" ? "selected" : "" %>>Manual</option>
              <option value="Automatic" <%= car.transmission === "Automatic" ? "selected" : "" %>>Automatic</option>
            </select>
          </div>
          

        <!-- Seats -->
        <div class="mb-3">
          <label for="seats" class="form-label">Number of Seats</label>
          <input type="number" value="<%= car.seats %>" class="form-control" id="seats" name="seats" >
        </div>

        <!-- Fuel -->
        <div class="mb-3">
          <label for="fuel" class="form-label">Fuel Type</label>
          <select class="form-select" id="fuel" name="fuel" d>
            <option <%= car.fuel == "Petrol" ? "selected" : "" %>  value="Petrol">Petrol</option>
            <option <%= car.fuel == "Diesel" ? "selected" : "" %>  value="Diesel">Diesel</option>
            <option <%= car.fuel == "Electric" ? "selected" : "" %>  value="Electric">Electric</option>
            <option <%= car.fuel == "Hybrid" ? "selected" : "" %>  value="Hybrid">Hybrid</option>
          </select>
        </div>

        <!-- Features -->
        <fieldset class="mb-3">
          <legend>Features</legend>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.airConditioning == true ? "checked" : "" %> type="checkbox" id="airConditioning" name="airConditioning">
            <label class="form-check-label"  for="airConditioning">Air Conditioning</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.frontSensors == true ? "checked" : "" %> type="checkbox" id="frontSensors" name="frontSensors">
            <label class="form-check-label" for="frontSensors">Front Back Sensors</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.backCamera == true ? "checked" : "" %> type="checkbox" id="backCamera" name="backCamera">
            <label class="form-check-label" for="backCamera">Back Camera</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.luggage == true ? "checked" : "" %> type="checkbox" id="luggage" name="luggage">
            <label class="form-check-label" for="luggage">Luggage</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.music == true ? "checked" : "" %> type="checkbox" id="music" name="music">
            <label class="form-check-label" for="music">Music</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.seatBelt == true ? "checked" : "" %> type="checkbox" id="seatBelt" name="seatBelt">
            <label class="form-check-label" for="seatBelt">Seat Belt</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.bluetooth == true ? "checked" : "" %> type="checkbox" id="bluetooth" name="bluetooth">
            <label class="form-check-label" for="bluetooth">Bluetooth</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.audioInput == true ? "checked" : "" %> type="checkbox" id="audioInput" name="audioInput">
            <label class="form-check-label" for="audioInput">Audio Input</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.longTermTrips == true ? "checked" : "" %> type="checkbox" id="longTermTrips" name="longTermTrips">
            <label class="form-check-label" for="longTermTrips">Long Term Trips</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.carKit == true ? "checked" : "" %> type="checkbox" id="carKit" name="carKit">
            <label class="form-check-label" for="carKit">Car Kit</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.remoteCentralLocking == true ? "checked" : "" %> type="checkbox" id="remoteCentralLocking" name="remoteCentralLocking">
            <label class="form-check-label" for="remoteCentralLocking">Remote Central Locking</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" <%= car.features.climateControl == true ? "checked" : "" %> type="checkbox" id="climateControl" name="climateControl">
            <label class="form-check-label" for="climateControl">Climate Control</label>
          </div>
        </fieldset>

        <!-- Submit Button -->
        <div class="text-center">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

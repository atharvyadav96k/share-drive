<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Car Display</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .car-card {
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 10px;
      background-color: #fff;
      text-align: center;
    }

    .car-image {
      width: 100%;
      height: auto;
      border-radius: 8px;
    }

    .car-name {
      font-size: 18px;
      margin: 5px 0;
    }

    .car-price {
      font-size: 18px;
      color: green;
    }
  </style>
</head>

<body style="background-color: #eeeeee;">
  <div class="container">
    <nav class="navbar navbar-expand-lg bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/admin">Admin Panel</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/admin">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/requests">Requests</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/uploadCar">New Car</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/admin/cars">Cars</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </div>
  
  <div class="container my-5">
    <h1 class="text-center mb-4">Cars</h1>
    <div class="row g-4">
      <!-- Car 1 -->
      <% cars.forEach((car)=>{ %>
        <div class="col-md-3 col-sm-6">
          <div class="car-card">
            <img height="100" class="car-image" src="data:image/png;base64,<%= car.thumbnail %>" alt="Car 1 Image">
            <div>
              <p class="car-name">
                <%= car.name %>
              </p>
              <p class="car-price">
                <%= car.pricePerDay %>
              </p>
            </div>
          </div>
          <div style="display: flex; justify-content: space-between;">
            <a href="/admin/editCar/<%= car._id %>" class="btn btn-warning m-2" style="flex-grow: 1;">edit</a>
            <a href="/admin/delete/<%= car._id %>" class="btn btn-danger m-2" style="flex-grow: 1;">delete</a>
          </div>
        </div>
        <% }) %>
    </div>
  </div>

  <!-- Bootstrap JS and Popper.js (for responsive features) -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>

</html>
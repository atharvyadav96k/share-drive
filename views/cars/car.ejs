        <script>
            // Active filter buttons for seats
            function filterBySeats(seatCount, buttonId) {
                const allCars = document.querySelectorAll('.car-card');
                allCars.forEach(car => {
                    car.style.display = seatCount === 'all' || car.classList.contains(`seaters-${seatCount}`) ? 'block' : 'none';
                });
        
                const allSeatButtons = document.querySelectorAll('#btn-all-seats, [id^="btn-"]');
                allSeatButtons.forEach(button => button.classList.remove('active-btn'));
                document.getElementById(buttonId).classList.add('active-btn');
            }
        
            // Active filter buttons for price
            function filterByPrice(priceRange, buttonId) {
                const allCars = document.querySelectorAll('.car-card');
                allCars.forEach(car => {
                    const price = parseInt(car.getAttribute('data-price'), 10);
                    if (priceRange === 'all') {
                        car.style.display = 'block';
                    } else if (priceRange === 'low' && price <= 2000) {
                        car.style.display = 'block';
                    } else if (priceRange === 'medium' && price > 2000 && price <= 5000) {
                        car.style.display = 'block';
                    } else if (priceRange === 'high' && price > 5000) {
                        car.style.display = 'block';
                    } else {
                        car.style.display = 'none';
                    }
                });
        
                const allPriceButtons = document.querySelectorAll('#btn-all-price, #btn-low, #btn-medium, #btn-high');
                allPriceButtons.forEach(button => button.classList.remove('active-btn'));
                document.getElementById(buttonId).classList.add('active-btn');
            }
        </script>
        
        


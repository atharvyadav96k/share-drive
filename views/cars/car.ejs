                        All
                    </button>
                    <button id="btn-low" onclick="filterByPrice('low', 'btn-low')" class="px-4 py-2 bg-gray-200 text-gray-900 rounded hover:bg-blue-700 hover:text-white">
                        ₹0 - ₹2000
                    </button>
                    <button id="btn-medium" onclick="filterByPrice('medium', 'btn-medium')" class="px-4 py-2 bg-gray-200 text-gray-900 rounded hover:bg-blue-700 hover:text-white">
                        ₹2001 - ₹5000
                    </button>
                    <button id="btn-high" onclick="filterByPrice('high', 'btn-high')" class="px-4 py-2 bg-gray-200 text-gray-900 rounded hover:bg-blue-700 hover:text-white">
                        ₹5000+
                    </button>
                </div>
            </div>
        
            <!-- Cars Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4" id="cars-container">
                <% cars.forEach((car) => { %>
                    <div class="car-card seaters-<%= car.seats %>" data-price="<%= car.pricePerDay %>">
                        <div style="margin: auto;" class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">

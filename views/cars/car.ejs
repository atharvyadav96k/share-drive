<!doctype html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>ShareDrive Cars</title>
	<link rel="icon" href="/images/favicon.png">
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>
	<style>	
		.card {
			width: 100%;
			height: 100%;
			box-shadow: 1px 1px 10px 1px #e1e1e1;
			border-width: 0px;
		}
	</style>
	<div class="container" style="position: sticky; top: 0px; z-index: 100;">
		<nav class="navbar navbar-expand-lg bg-body-tertiary">
			<div class="container-fluid">
			  <a class="navbar-brand" href="/">
				<img src="/images/logo.png" alt="Logo" width="70" height="24" class="d-inline-block align-text-top">
				<strong style="text-transform: uppercase; font-weight: bold; font-size: 23px;"><span style="color: #000;">Share</span><span style="color: #1871e3;">Drive</span></strong>
			  </a>
			  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
				aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			  </button>
			  <div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
				  <li class="nav-item">
					<a class="nav-link text-primary fw-semibold" aria-current="page" href="/about">About</a>
				  </li>
				  <li class="nav-item">
					<a class="nav-link text-primary fw-semibold" href="/services">Services</a>
				  </li>
				  <li class="nav-item">
					<a class="nav-link text-primary fw-semibold" href="/pricing">Pricing</a>
				  </li>
				  <li class="nav-item">
					<a class="nav-link text-primary fw-semibold" href="/car">Cars</a>
				  </li>
				  <% if(profile){ %>
					<li class="nav-item">
					  <a class="nav-link text-primary fw-semibold" href="/profile/<%= profile %>">Profile</a>
					</li>
				  <% } else{%>
					<li class="nav-item">
					  <a class="nav-link text-primary fw-semibold" href="/login">Login</a>
					</li>
				  <% } %>
				</ul>
			  </div>
			</div>
		  </nav>
	</div>
	<div class="container mt-3">
		<div class="row">
			<% cars.forEach((ele)=>{ %>
				<div class="col-lg-4 col-md-6 col-sm-12 mb-3">
					<div class="card h-100 d-flex flex-column">
						<!-- Card Image -->
						<img src="<%= ele.thumbnail %>" class="card-img-top img-fluid"
							alt="<%= ele.name %>" style="object-fit: contain; height: 200px;">

						<!-- Card Body -->
						<div class="card-body d-flex flex-column justify-content-between">
							<!-- Item Name -->
							<p class="fw-bold text-center text-truncate" title="<%= ele.name %>">
								<%= ele.name %>
							</p>

							<!-- Action Buttons -->
							<div class="d-flex justify-content-between mt-auto">
								<a href="/car/request/<%= ele._id %>" class="btn btn-primary flex-fill mx-1">
									Request
								</a>
								<a href="/car/details/<%= ele._id %>" class="btn btn-success flex-fill mx-1">
									Details
								</a>
							</div>
						</div>
					</div>
				</div>

				<% }) %>
		</div>
	</div>

	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
		crossorigin="anonymous"></script>
</body>

</html>
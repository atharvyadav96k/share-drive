  <!-- get car -->
  <section class="ftco-section" id="focus">
    <div class="container">
      <div class="row">
        <!-- Car Image Section -->
        <div class="col-md-6">
          <img src="data:image/png;base64,<%= car.image %>" alt="Car Image" class="img-fluid"
            style="max-height: 400px; object-fit: cover; border-radius: 8px;">
        </div>

        <!-- Purchase Form Section -->
        <div class="col-md-6">
          <h2 class="mb-4">Request Car</h2>
          <form action="/car/request" method="POST">
            <div class="form-group d-flex">
              <div class="form-group mr-3">
                <label for="carModel">Car</label>
                <input type="text" value="<%= car.name %>" class="form-control" id="carModel" disabled>
              </div>
              <div class="form-group">
                <label for="carModel">Price</label>
                <input type="text" value="<%= car.pricePerDay %>" class="form-control" id="carModel" disabled>
              </div>
            </div>
            <div class="form-group" style="display: none;">
              <label for="carId">Price</label>
              <input type="text" value="<%= car._id %>" class="form-control" name="carId" id="carId">
            </div>
            <div class="form-group">
              <label for="buyerName">Name</label>
              <input type="text" class="form-control" value="<%= name %>" id="name" name="name"
                placeholder="Enter Your Name" required>
            </div>
            <div class="form-group">
              <label for="email">Email Address</label>
              <input type="email" value="<%= email %>" disabled class="form-control" id="email">
            </div>
            <div class="form-group">
              <label for="contactNumber">Contact Number</label>
              <input type="text" value="<%= phoneNo %>" class="form-control" id="phoneNo" name="phoneNo"
                placeholder="Enter Your Contact Number" required>
            </div>
            <button type="submit" class="btn btn-primary" id="requestBtn">Request</button>
            <script>
              const form = document.querySelector('form');
              const requestBtn = document.getElementById('requestBtn');

              form.addEventListener('submit', (e) => {
                // Disable the button to prevent multiple clicks
                requestBtn.disabled = true;

                // Optionally, change the text to indicate loading
                requestBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Requesting...';
              });
            </script>

          </form>
        </div>
      </div>
    </div>
  </section>


